contract LPPOOL is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using Address for address payable;



    uint256 public starttime; // starttime TBD


    IUniswapV2Router02 public uniswapV2Router;
    //address public uniswapV2CRSPair=0x9a1F589a7e36eD93eD9786AdB00a7b53493cce84;
    address public constant USDTToken = 0x55d398326f99059fF775485246999027B3197955;//BSC usdt
    address public CRSToken ;
   


    constructor(
        uint256 starttime_
    ) {
        starttime = starttime_;
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        uniswapV2Router = _uniswapV2Router;
    }


    function setUniswapRouter(address _address) public onlyOwner{
        uniswapV2Router = IUniswapV2Router02(_address);
    }


    function setCRSToken(address _address) public onlyOwner{
        CRSToken = _address;
    }


  function swapTokensForTokens(address token,uint256 tokenAmount,address[] memory path) private {
        IERC20(token).approve(address(uniswapV2Router), tokenAmount);
        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of USDT
            path,
            address(this),
            block.timestamp
        );
    }




   function addLiquidity(uint256 tokenAmount, uint256 USDTAmount) external onlyOwner {
        // approve token transfer to cover all possible scenarios
        IERC20(CRSToken).approve(address(uniswapV2Router), tokenAmount);
        IERC20(USDTToken).approve(address(uniswapV2Router), USDTAmount);
        // add the liquidity
        uniswapV2Router.addLiquidity(
            CRSToken,
            USDTToken,
            tokenAmount,
            USDTAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp
        );
    }


    function Migrate(address token, address to, uint256 amount) external onlyOwner {
        IERC20(token).safeTransfer(to, amount);
    }

    }


